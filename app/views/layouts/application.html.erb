<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="http://vjs.zencdn.net/5.0.2/video-js.css" rel="stylesheet">
  <script src="http://vjs.zencdn.net/5.0.2/video.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="wrap">
    <nav class="navbar navbar-inverse" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
           <%= link_to 'Flixter', root_path, :class => 'navbar-brand' %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to 'My Dashboard', dashboard_path %></li>
              <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
            <% else %>
              <li><%= link_to 'Sign in', new_user_session_path %></li>
              <li><%= link_to 'Sign up', new_user_registration_path %></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'See All Courses', courses_path %></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

  <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  
  <%= yield %>

</div>

  <br class="clr" />
   
  <div id="footer">
    <div class="container">
      <div class="col-xs-12 col-sm-3">
        <ul>
        <b>Teachers</b>
        <br />
        <br />
        <li><%= link_to 'Teach a course', new_instructor_course_path %></li>
        <li><%= link_to 'My Dashboard', dashboard_path %></li>
        </ul>
      </div>  
      <div class="col-xs-12 col-sm-3">
        <ul>
        <b>About</b>
        <br />
        <br />
        <li><%= link_to 'Team', team_path %></li>
        <li><%= link_to 'Careers', careers_path %></li>
        <li><%= link_to 'Privacy Policy', privacy_path %></li>
        </ul>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>Contact</b>
        <br />
        <br />
        flixter@theflixterproject.com
        <br />
        Tian fu Square 
        <br />
        Chengdu, 610000
      </div>
      <div class="col-xs-12 col-sm-3 social">
        <b>Social</b>
        <br>
        <br>
        <%= link_to 'https://github.com/mbrown78' do %>
          <%= image_tag 'icon-github.png', class: 'social-button' %>
        <% end %>  
        <%= image_tag 'icon-facebook.png', class: 'social-button' %>
        <%= image_tag 'icon-twitter.png', class: 'social-button' %>
      </div>
    </div>
  </div>

</body>
</html>
